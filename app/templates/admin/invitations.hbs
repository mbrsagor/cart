<h1>Invitations</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |invitations|}}
        <tr>
            <th>{{invitations.id}}</th>
            <td>{{invitations.email}}</td>
            <button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitations}}>Delete</button>
        </tr>
        {{/each}}
    </tbody>
</table>
